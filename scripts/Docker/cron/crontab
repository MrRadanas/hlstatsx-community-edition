# Check if daemon running (every 30 minutes)
* * * * * cd /scripts && ./run_hlstats start >/dev/null 2>&1

# Auto restart daemon (midnight)
0 0 * * * cd /scripts && ./run_hlstats restart >/dev/null 2>&1

# Generate awards and cleanup
0 0 * * * cd /scripts && ./hlstats-awards.pl >/dev/null 2>&1

# Auto remove old Daemon logs (14 days)
0 0 * * * find /scripts/logs -type f -mtime +14 -exec rm -rf {} \ >/dev/null 2>&1
